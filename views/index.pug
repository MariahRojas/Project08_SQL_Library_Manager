extends layout.pug

block title
  title Books
  
block content
  div
    h1 Books
    p
      a.button(href='/books/new') Create New Book
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody
        each book in books
          tr
            td 
              a(href="/books/update/")= book.title
            td= book.author
            td= book.genre
            td= book.year