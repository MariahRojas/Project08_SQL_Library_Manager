extends layout.pug

block content
  head
    title A Brief History of Time
  h1 Update Book
  form
    p
      label(for='title') Title
      input#title(name='title' type='text' value=(undefined===book ? '' : book.title))
    p
      label(for='author') Author
      input#author(name='author' type='text' value=(undefined===book ? '' : book.author))
    p
      label(for='genre') Genre
      input#genre(name='genre' type='text' value=(undefined===book ? '' : book.genre))
    p
      label(for='year') Year
      input#year(name='year' type='text' value=(undefined===book ? '' : book.year))
    p
      input(type='submit' value='Update Book')
  form(method='post' action='/books/8/delete' onsubmit="return confirm('Do you really want to delete this book?');")
    p
      a.button(href='/') Cancel
    p
      input(type='submit' value='Delete Book')
